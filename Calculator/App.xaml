<Application x:Class="Calculator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Calculator"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
    <SolidColorBrush x:Key="numbersBackground" Color="#444444"/>
    <SolidColorBrush x:Key="numbersForeground" Color="White"/>
    <SolidColorBrush x:Key="operatorsBackground" Color="Orange"/>
    <SolidColorBrush x:Key="operatorsForeground" Color="White"/>

    <Style TargetType="Button">
      <Setter Property="FontSize" Value="25"/>
      <Setter Property="Margin" Value="5"/>
    </Style>

    <Style TargetType="Button" x:Key="numberButtonStyle">
      <Setter Property="FontSize" Value="25"/>
      <Setter Property="Margin" Value="5"/>
      <Setter Property="Background" Value="{StaticResource numbersBackground}"/>
      <Setter Property="Foreground" Value="{StaticResource numbersForeground}"/>
    </Style>

    <Style TargetType="Label">
      <Setter Property="FontSize" Value="70"/>
    </Style>
    
  </Application.Resources>
</Application>
